# Aureus Sentinel Bridge Environment Configuration
# Copy this file to .env and configure for your environment

# ===================================================================
# Server Configuration
# ===================================================================
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# ===================================================================
# Key Management
# ===================================================================
# Option 1: Local Keys (Development)
# Generate keys with: aureus keygen --output ./keys
USE_KMS=false
PRIVATE_KEY_PATH=./keys/private.pem

# Option 2: AWS KMS (Production)
# USE_KMS=true
# KMS_KEY_ID=alias/aureus-bridge
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# ===================================================================
# Security
# ===================================================================
# API Key for Bridge endpoint (optional)
# API_KEY=your_secure_api_key_here

# Default TTL for signatures (seconds)
DEFAULT_TTL=300

# ===================================================================
# Rate Limiting
# ===================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================================================
# Docker Configuration
# ===================================================================
BRIDGE_PORT=3000
BRIDGE_DEV_PORT=3001

# ===================================================================
# Monitoring (Optional)
# ===================================================================
# METRICS_ENABLED=true
# METRICS_PORT=9090
