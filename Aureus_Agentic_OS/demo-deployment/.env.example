# Aureus Demo Environment Configuration
# Copy this file to .env and customize for your environment

# =================================================================
# GENERAL SETTINGS
# =================================================================
NODE_ENV=production
LOG_LEVEL=info

# Demo Configuration
DEMO_MODE=enabled
DEMO_ENVIRONMENT=shared  # Options: shared, personal, developer, admin, devops

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
DB_PASSWORD=change-this-password-in-production
DATABASE_URL=postgresql://aureus:change-this-password-in-production@localhost:5432/aureus_demo

# =================================================================
# AUTHENTICATION
# =================================================================
JWT_SECRET=change-this-jwt-secret-in-production-use-strong-random-string
SESSION_TIMEOUT=86400

# OAuth Providers (optional)
AUTH_PROVIDER=oauth  # Options: oauth, sso, basic

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =================================================================
# LLM CONFIGURATION
# =================================================================
LLM_PROVIDER=openai  # Options: openai, anthropic, azure, mock
LLM_MODEL=gpt-4
OPENAI_API_KEY=your-openai-api-key

# LLM Caching and Fallback
LLM_CACHE_ENABLED=true
LLM_MOCK_FALLBACK=true  # Fallback to mock LLM when API fails

# Anthropic (if using)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Azure OpenAI (if using)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# =================================================================
# RESOURCE LIMITS
# =================================================================

# Personal Users
MAX_AGENTS_PERSONAL=5
MAX_EXECUTIONS_PER_DAY_PERSONAL=50
MAX_MEMORY_MB_PERSONAL=100
SANDBOX_TYPE_PERSONAL=simulation

# Developers
MAX_AGENTS_DEVELOPER=20
MAX_EXECUTIONS_PER_DAY_DEVELOPER=500
MAX_MEMORY_MB_DEVELOPER=1000
SANDBOX_TYPE_DEVELOPER=container

# Administrators
# (No limits - full access)

# DevOps
# (Infrastructure-level access)

# =================================================================
# MONITORING & OBSERVABILITY
# =================================================================
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Grafana Credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-this-grafana-password

# Metrics Retention
METRICS_RETENTION_DAYS=30

# Alert Manager (optional)
ALERT_EMAIL=alerts@example.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =================================================================
# BACKUP & RECOVERY
# =================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM UTC
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups  # Or s3://your-bucket/path

# =================================================================
# CLOUD PROVIDER (for production deployment)
# =================================================================

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=aureus-demo-backups

# Azure
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=aureus-demo-rg
AZURE_STORAGE_ACCOUNT=aureusdemostorage

# GCP
GCP_PROJECT_ID=your-gcp-project
GCP_REGION=us-central1
GCP_BUCKET=aureus-demo-backups

# =================================================================
# SECURITY
# =================================================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://demo.aureus.io

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/aureus.crt
SSL_KEY_PATH=/etc/ssl/private/aureus.key

# =================================================================
# DATA RETENTION & COMPLIANCE
# =================================================================
DATA_RETENTION_DAYS=90  # GDPR compliance
AUDIT_LOG_RETENTION_DAYS=365  # Compliance requirements
AUTO_PURGE_ENABLED=true  # Auto-delete expired demo data

# =================================================================
# EXTERNAL SERVICES (optional)
# =================================================================

# Email (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=demo@aureus.io
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Aureus Demo <demo@aureus.io>

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=demo

# =================================================================
# FEATURE FLAGS
# =================================================================
FEATURE_AGENT_STUDIO=true
FEATURE_DEPLOYMENT_PIPELINE=true
FEATURE_MONITORING_DASHBOARD=true
FEATURE_REFLEXION=true
FEATURE_ROBOTICS=true
FEATURE_HEALTHCARE=true
FEATURE_MCP=true

# =================================================================
# DEVELOPMENT / DEBUGGING
# =================================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false
