# Aureus Sentinel Full Stack Environment Configuration
# Copy to .env and update with production values

# ============================================================================
# Stack-Wide Configuration
# ============================================================================
NODE_ENV=development  # development, staging, production
LOG_LEVEL=info        # debug, info, warn, error
POSTGRES_PASSWORD=aureus_dev_password  # CHANGE IN PRODUCTION

# ============================================================================
# Bridge (Signing Service) Configuration
# ============================================================================
BRIDGE_API_KEY=dev_bridge_key_change_in_prod

# Key Management
USE_KMS=false
PRIVATE_KEY_PATH=./keys/private.pem

# AWS KMS (production only)
# USE_KMS=true
# KMS_KEY_ID=alias/aureus-bridge
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=<your_access_key>
# AWS_SECRET_ACCESS_KEY=<your_secret_key>

# ============================================================================
# Aureus OS (Policy Engine) Configuration
# ============================================================================
FLASK_ENV=development

# ML Models (optional, use pre-trained models)
RISK_MODEL_PATH=/app/models/risk_assessment.pkl
POLICY_MODEL_PATH=/app/models/policy_engine.pkl

# ============================================================================
# OpenClaw (Multi-Channel Platform) Configuration
# ============================================================================

# Telegram Bot
TELEGRAM_BOT_TOKEN=
# Get from: https://t.me/BotFather

# Discord Bot
DISCORD_BOT_TOKEN=
# Get from: https://discord.com/developers/applications

# Slack App
SLACK_APP_TOKEN=
# Get from: https://api.slack.com/apps

# Security
JWT_SECRET=dev_jwt_secret_change_in_prod
SESSION_SECRET=dev_session_secret_change_in_prod

# ============================================================================
# Monitoring Configuration
# ============================================================================
GRAFANA_PASSWORD=admin  # CHANGE IN PRODUCTION

# ============================================================================
# Development Tools (optional)
# ============================================================================
PGADMIN_EMAIL=admin@aureus.local
PGADMIN_PASSWORD=admin  # CHANGE IN PRODUCTION

# ============================================================================
# Production-Only Configuration
# ============================================================================

# TLS/SSL Certificates (production)
# SSL_CERT_PATH=/certs/fullchain.pem
# SSL_KEY_PATH=/certs/privkey.pem

# External Services (production)
# SENTRY_DSN=<your_sentry_dsn>
# DATADOG_API_KEY=<your_datadog_key>

# Rate Limiting (production)
# RATE_LIMIT_MAX_REQUESTS=1000
# RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# Notes
# ============================================================================
# 1. Never commit this file with real credentials to version control
# 2. Use strong random passwords for production
# 3. Rotate keys and passwords regularly
# 4. Use AWS Secrets Manager or HashiCorp Vault for production secrets
# 5. Enable MFA on all cloud provider accounts
